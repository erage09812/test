name: CI
env:
  SF_USERNAME: ${{ secrets.SF_USERNAME }}
  SF_PASSWORD: ${{ secrets.SF_PASSWORD }}
  SF_CLIENT_ID: ${{ secrets.SF_CLIENT_ID }}
  SF_CLIENT_SECRET: ${{ secrets.SF_CLIENT_SECRET }}
  SF_LOGIN_ENDPOINT: ${{ secrets.SF_LOGIN_ENDPOINT }}
  SF_INSTANCE_URL: ${{ secrets.SF_INSTANCE_URL }}
on:
  workflow_dispatch:
jobs:
  test-build:
    runs-on: [self-hosted, csg, daimlertruck, dt-csg-runtime]
    environment: 'dev'
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2
      - name: Login to Docker Hub
        uses: docker/login-action@v2
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}
      - name: Build and push Docker image
        run: |
          docker build \
            --build-arg SF_USERNAME="${{ secrets.SF_USERNAME }}" \
            --build-arg SF_PASSWORD="${{ secrets.SF_PASSWORD }}" \
            --build-arg SF_CLIENT_ID="${{ secrets.SF_CLIENT_ID }}" \
            --build-arg SF_CLIENT_SECRET="${{ secrets.SF_CLIENT_SECRET }}" \
            --build-arg SF_LOGIN_ENDPOINT="${{ secrets.SF_LOGIN_ENDPOINT }}" \
            --build-arg SF_INSTANCE_URL="${{ secrets.SF_INSTANCE_URL }}" \
            -t jagadeeshdtna/jk02:latest .
      - name: Debug
        run: |
          echo "SF_USERNAME: $SF_USERNAME"
      - name: Push Docker image to Docker Hub
        run: |
          docker push ${{ secrets.DOCKER_USERNAME }}/jk02:latest  
      - name: Docker run
        run: |
          docker run \
            -e SF_USERNAME="${{ secrets.SF_USERNAME }}" \
            -e SF_PASSWORD="${{ secrets.SF_PASSWORD }}" \
            -e SF_CLIENT_ID="${{ secrets.SF_CLIENT_ID }}" \
            -e SF_CLIENT_SECRET="${{ secrets.SF_CLIENT_SECRET }}" \
            -e SF_LOGIN_ENDPOINT="${{ secrets.SF_LOGIN_ENDPOINT }}" \
            -e SF_INSTANCE_URL="${{ secrets.SF_INSTANCE_URL }}" \
            -t jagadeeshdtna/jk02:latest
        env:
          SF_USERNAME: ${{ secrets.SF_USERNAME }}
          SF_PASSWORD: ${{ secrets.SF_PASSWORD }}
          SF_CLIENT_ID: ${{ secrets.SF_CLIENT_ID }}
          SF_CLIENT_SECRET: ${{ secrets.SF_CLIENT_SECRET }}
          SF_LOGIN_ENDPOINT: ${{ secrets.SF_LOGIN_ENDPOINT }}
          SF_INSTANCE_URL: ${{ secrets.SF_INSTANCE_URL }}
